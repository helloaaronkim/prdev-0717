<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>a63e6d25-8aaf-4512-b36d-d91b90a55c4a</groupId>
    <artifactId>check-in-papi-template</artifactId>
    <version>1.0.0</version>
    <packaging>mule-application</packaging>
    <name>check-in-papi-template</name>
    <description>A mule application template uploaded using Exchange Maven Facade v3</description>
    <build>
        <plugins>
            <plugin>
                <groupId>org.mule.tools.maven</groupId>
                <artifactId>mule-maven-plugin</artifactId>
                <version>3.5.4</version>
                <extensions>true</extensions>
                <configuration>
                    <classifier>mule-application-template</classifier>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <!-- in this WT we don't yet use a parent POM: allude to this by specifying the version of each dependency: -->
    <dependencies>
        <!-- API specification of the API exposed by this API implementation -->
        <!-- expressed through properties defined above -->
        <dependency>
            <groupId>a63e6d25-8aaf-4512-b36d-d91b90a55c4a</groupId>
            <artifactId>check-in-papi-app</artifactId>
            <version>1.1.1</version>
            <classifier>oas</classifier>
            <type>zip</type>
        </dependency>
        <!-- limitation in Mule Maven tooling: must define before apikit! -->
        <dependency>
            <groupId>org.mule.connectors</groupId>
            <artifactId>mule-http-connector</artifactId>
            <version>1.6.0</version>
            <classifier>mule-plugin</classifier>
        </dependency>
        <dependency>
            <groupId>org.mule.modules</groupId>
            <artifactId>mule-apikit-module</artifactId>
            <version>1.5.8</version>
            <classifier>mule-plugin</classifier>
        </dependency>
    </dependencies>
    <!-- in this WT we don't yet use a parent POM: allude to this by configuring repositories here: -->
    <repositories>
        <repository>
            <id>anypoint-exchange-v3</id>
            <name>Anypoint Exchange</name>
            <url>https://maven.anypoint.mulesoft.com/api/v3/maven</url>
            <layout>default</layout>
        </repository>
        <repository>
            <id>mulesoft-releases</id>
            <name>MuleSoft Releases Repository</name>
            <url>https://repository.mulesoft.org/releases/</url>
            <layout>default</layout>
        </repository>
    </repositories>
    <pluginRepositories>
        <pluginRepository>
            <id>mulesoft-releases</id>
            <name>mulesoft release repository</name>
            <layout>default</layout>
            <url>https://repository.mulesoft.org/releases/</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>
    <properties>
        <tags>check-in</tags>
        <categories>[{"key":"Tier","value":"Process Tier"}]</categories>
    </properties>
</project>
